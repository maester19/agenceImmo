{% cache 'property'~ property.id property.createdAt.timestamp %}

<div class="card mb-4">
    {% if property.filename %}
    <img src="{{ vich_uploader_asset(property, 'imageFile')| imagine_filter('thumb') }}" alt="" class="card-img-top">
    {% else %}
    <img src="{{ '/images/properties/pexel.jpeg' | imagine_filter('thumb') }}" alt="" class="card-img-top">
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }} ">
                {{ property.title }}
            </a>
        </h5>
        <p class="card-text">{{ property.surface }}m2 {{ property.city }}  ({{ property.postalCode }}) </p>
        <div class="text-primary" style="font-size: 2rem;font-weight: bold;">
            {{ property.price }}$
        </div>
    </div>
</div>
    
{% endcache %}