{% extends "base.html.twig" %}

{% block title "Tout nos biens" %}

{% block body %}

    <div class="container">
        <div class="jumbotron">
            {{ form_start(form) }}
            <div class="row mt-4 align-item-end">
                <div class="col">
                    {{ form_row(form.minSurface) }}
                </div>
                <div class="col">
                    {{ form_row(form.maxPrice) }}
                </div>
                <div class="col">
                    {{ form_row(form.options) }}
                </div>
                <div class="col">
                    <div class="form-group">
                        <button class="btn btn-primary">Rechercher</button>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
        <div class="container mt-4" >
            <h1>Voir tout nos biens</h1>
        </div>
    
        <div class="row">
            {% for property in properties %}
                <div class="col-md-4">
                  {% include "property/_property.html.twig" %}
                </div>
            {% endfor %}
            <div class="pagination">
                {{ knp_pagination_render(properties, 'property/pagination.html.twig') }}
            </div>
        </div>
    </div>
    
    
{% endblock %}